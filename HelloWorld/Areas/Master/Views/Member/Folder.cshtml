@model Member
@{
    Layout = null;
    List<Folder> folders = ViewBag.Folders;
}


<div class="pageContent">

    <form method="post" action='@Url.Action("Folder")' class="pageForm required-validate" onsubmit="return validateCallback(this, dialogAjaxDone)">
        <div class="pageFormContent " layoutH="58">
            <input type="hidden" name="Id" value="@Model.Id" />
            <table class="list" layoutH="58">
                <thead>
                    <tr>
                        <th align="center">序号</th>
                        <th align="center"><input type="checkbox" group="ids" class="checkboxCtrl"></th>
                        <th>文件夹名称</th>
                    </tr>
                </thead>
                <tbody>
                    @{int i=0;}
                    @foreach (var item in folders)
                    {

                    <tr>
                        <td align="center">@(++i)</td>
                        <td align="center"><input name="ids" value="@item.Id" type="checkbox" @(Model.Folder.Select(o=>o.Id).Contains(item.Id)?"checked=\"checked\"":"")></td>
                        <td>@item.Name</td>
                        </tr>
                    }

                </tbody>
            </table>
           
             @*<div class="panelBar">
                <div class="pages">
                    <span>显示</span>
                    <select class="combox" name="numPerPage" onchange="navTabPageBreak({numPerPage:this.value})">
                        <option value="20">20</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                        <option value="200">200</option>
                    </select>
                    <span>条，共@(folders.Count)条</span>
                </div>
                <div class="pagination" targetType="dialog" totalCount="@(folders.Count)" numPerPage="@(folders.Count)" pageNumShown="10" currentPage="1"></div>
            </div>*@
        </div>
        <div class="formBar">
            <ul>
                <li><div class="buttonActive"><div class="buttonContent"><button type="submit">提交</button></div></div></li>
                <li><div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div></li>
            </ul>
        </div>
    </form>
</div>

