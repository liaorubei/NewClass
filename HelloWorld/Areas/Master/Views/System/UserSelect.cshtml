@model PagedList<X_User>
@{
    Layout = null;
}
<div class="pageHeader">
    <form id="pagerForm" onsubmit="return navTabSearch(this);" action="" method="post">
        <input type="hidden" name="pageNum" value="1" />
        <input type="hidden" name="numPerPage" value="@Model.PageSize" />
        <div class="searchBar">
            <ul class="searchContent">
                <li>
                    <label>关键字：</label>
                    <input type="text" name="keyword" value="@ViewBag.Keyword" />
                </li>
                <li>
                    <select class="combox" name="province">
                        <option value="">所有省市</option>
                        <option value="北京">北京</option>
                        <option value="上海">上海</option>
                        <option value="天津">天津</option>
                        <option value="重庆">重庆</option>
                        <option value="广东">广东</option>
                    </select>
                </li>
            </ul>

            <div class="subBar">
                <ul>
                    <li><div class="buttonActive"><div class="buttonContent"><button type="submit">检索</button></div></div></li>
                </ul>
            </div>
        </div>
    </form>
</div>
<div class="pageContent">
    <div class="panelBar">
        <ul class="toolBar">
            <li><a class="create" href='@Url.Action("UserCreate")' target="dialog" mask="true"><span>添加</span></a></li>
            <li><a class="delete" href="demo/common/ajaxDone.html?uid={sid_user}" target="ajaxTodo" title="确定要删除吗?"><span>删除</span></a></li>
            <li><a class="update" href='@Url.Action("", new { id = "{id}" })' target="dialog" mask="true"><span>修改</span></a></li>
            <li class="line">line</li>
            <li><a class="update" href='@Url.Action("UserRoleAssign", new { id="{id}"})' target="dialog" mask="true"><span>权限分配</span></a></li>
        </ul>
    </div>
    <table class="list" layoutH="115">
        <thead>
            <tr>
                <th width="35" align="center">序号</th>
                <th width="120">用户名</th>
                <th>权限</th>
                @*<th width="100">客户类型</th>
                    <th width="150">证件号码</th>
                    <th width="80" align="center">信用等级</th>
                    <th width="80">所属行业</th>
                    <th width="80">建档日期</th>*@
            </tr>
        </thead>
        <tbody>
            @{ int i = 0;}
            @foreach (var item in Model)
            {
                <tr target="id" rel="@(item.Id.Trim())">
                    <td align="center">@(++i)</td>
                    <td>@item.Username</td>
                    <td>@Html.Raw(String.Join("  ", item.X_Role.Select(o => String.Format("<a href='{0}'>{1}</a>", Url.Action("role", new { id = o.Id }), o.Name))))</td>
                    @*<td>联社营业部</td>
                        <td>29385739203816293</td>
                        <td>5级</td>
                        <td>政府机构</td>
                        <td>2009-05-21</td>*@
                </tr>
            }

        </tbody>
    </table>
    @Html.NavTabPages(Model, 10)
</div>
